function APP_CopyRectangleTo(APP_ID,destRECTANGLE_ID)local (x,y,w,h)
(
    x = RECTANGLE_getX(APP_ID);
    y = RECTANGLE_getY(APP_ID);
    w = RECTANGLE_getWidth(APP_ID);
    h = RECTANGLE_getHeight(APP_ID);
