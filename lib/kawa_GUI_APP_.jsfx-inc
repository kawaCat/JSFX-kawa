function APP_storeLastInfo(APP_ID)
(
    //================================================================
    APP_setLastWindowWidth(APP_ID ,gfx_w);
    APP_setLastWindowHeight(APP_ID,gfx_h);
    //================================================================

    //================================================================
    APP_setLasKeyState(APP_ID, gfx_getchar());
    //================================================================
    APP_ID;//return
);
